{
  "name": "front-end",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --configuration=ci",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:headless": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:ci": "playwright test --reporter=html --reporter=github",
    "lint": "eslint . --ext .ts,.html --max-warnings=0",
    "lint:ci": "eslint . --ext .ts,.html --ignore-pattern 'src/app/classroom/lesson-material/tabs/**' --ignore-pattern 'src/app/features/landing/**' --ignore-pattern 'src/app/features/marathons/**' --ignore-pattern 'src/app/features/materials/**' --ignore-pattern 'src/app/features/tariffs/**' --ignore-pattern 'src/app/shared/components/calendar/**' --ignore-pattern 'src/app/shared/components/schedule/**' --ignore-pattern 'src/app/test-video-call/**' --ignore-pattern 'public/**'",
    "format": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "angular:check": "ng build --configuration=production --aot",
    "angular:typecheck": "ng build --aot",
    "check:all": "npm run typecheck && npm run angular:check && npm run lint:ci",
    "check:errors": "npm run typecheck",
    "check:angular-errors": "ng build --configuration=production --aot",
    "check:errors-count": "powershell \"npm run typecheck 2>&1 | Select-String 'error TS' | Measure-Object | Select-Object Count\"",
    "check:angular-count": "powershell \"ng build --configuration=production --aot 2>&1 | Select-String 'ERROR' | Measure-Object | Select-Object Count\"",
    "check:quick": "npm run typecheck && echo TypeScript OK"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@ng-select/ng-select": "^13.9.1",
    "agora-rtc-sdk-ng": "^4.22.1",
    "angular-calendar": "^0.31.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.4.6",
    "date-fns": "^4.1.0",
    "fabric": "^6.5.3",
    "ngx-bootstrap": "^18.1.3",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.8.1",
    "textfit": "^2.4.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "white-web-sdk": "^2.16.53",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.9",
    "@angular-eslint/builder": "^20.2.0",
    "@angular-eslint/eslint-plugin": "^20.2.0",
    "@angular-eslint/eslint-plugin-template": "^20.2.0",
    "@angular-eslint/template-parser": "^20.2.0",
    "@angular/cli": "^18.2.9",
    "@angular/compiler-cli": "^18.2.0",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.53.2",
    "@types/bootstrap": "^5.2.10",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.3.1",
    "@types/textfit": "^2.4.5",
    "eslint": "^9.35.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.42.0"
  }
}
